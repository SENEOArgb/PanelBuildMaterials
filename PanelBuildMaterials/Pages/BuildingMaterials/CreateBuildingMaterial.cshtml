@page
@model PanelBuildMaterials.Pages.BuildingMaterials.CreateModel
@{
    ViewData["Title"] = "Добавить стройматериал";
}

<div class="manip-page">
    <form class="form-manip" method="post">
        <h1 class="text-center">Добавить стройматериал</h1>
        <div class="form-group">
            <label asp-for="BuildingMaterial.NameBuildingMaterial" class="form-label">Наименование стройматериала:</label>
            <input asp-for="BuildingMaterial.NameBuildingMaterial" class="form-control" />
            <span asp-validation-for="BuildingMaterial.NameBuildingMaterial" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BuildingMaterial.CategoryId" class="form-label">Категория:</label>
            <select asp-for="BuildingMaterial.CategoryId" asp-items="Model.Categories" class="form-control">
                <option value="">-- Выберите категорию --</option>
            </select>
            <span asp-validation-for="BuildingMaterial.CategoryId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BuildingMaterial.RetailPrice" class="form-label">Розничная цена:</label>
            <input asp-for="BuildingMaterial.RetailPrice" class="form-control" />
            <span asp-validation-for="BuildingMaterial.RetailPrice" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="BuildingMaterial.WholesalePrice" class="form-label">Оптовая цена:</label>
            <input asp-for="BuildingMaterial.WholesalePrice" class="form-control" />
            <span asp-validation-for="BuildingMaterial.WholesalePrice" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Добавить</button>
        <a asp-page="/BuildingMaterials/BuildingMaterials" style="display:inline;" class="action-btn delete-btn">Отменить</a>
    </form>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $.validator.addMethod("validateprices", function (value, element) {
            return this.optional(element) || /^\d+(\.\d+)?$/.test(value) && parseFloat(value) > 0;
        }, "Значение должно быть положительным числом.");

        $.validator.unobtrusive.adapters.addBool("validateprices");
    </script>
}