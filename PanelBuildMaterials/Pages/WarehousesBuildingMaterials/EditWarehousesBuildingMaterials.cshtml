@page "{id:int}"
@model PanelBuildMaterials.Pages.WarehousesBuildingMaterials.EditWarehousesBuildingMaterialsModel
@{
    ViewData["Title"] = "Изменить материал";
}

<form class="form-manip" method="post">
    <h1 class="text-center">Изменить материал @Model.Material.BuildingMaterial.NameBuildingMaterial</h1>
    <input type="hidden" name="BuildingMaterialWarehouseId" value="@Model.Material.BuildingMaterialWarehouseId" />

    <div class="form-group">
        <label for="BuildingMaterialId">Выберите материал</label>
        <select id="BuildingMaterialId" name="BuildingMaterialId" class="form-control" required>
            @foreach (var material in Model.AvailableMaterials)
            {
                <option value="@material.BuildingMaterialId"
                        selected="@(material.BuildingMaterialId == Model.BuildingMaterialId ? "selected" : null)">
                    @material.NameBuildingMaterial
                </option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="AmountBuildingMaterial">Количество</label>
        <input type="number" id="AmountBuildingMaterial" name="AmountBuildingMaterial" value="@Model.AmountBuildingMaterial" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-page="/WarehousesBuildingMaterials/WarehousesBuildingMaterials" asp-route-id="@Model.Material.WarehouseId" style="display:inline;" class="action-btn delete-btn">Отменить</a>
</form>
